<% @sites.each do |row| %>
SiteID: <%= row.siteid %>
  Site Name (Site Code): <%= row.sitename %> (<%= row.sitecode %>)
  Latitude: <%= number_with_precision(row.lat, precision: 3) %>, Longitude: <%= number_with_precision(row.lng, precision: 3) %>, Elevation (m): <%= number_with_precision(row.z, precision: 3) %>
  County, State: <%= row.county || "Unknown" %>, <%= row.state || "Unknown" %>
  Data Networks: <%= render(row.networks) || "None" %>
  Data Organizations: <%= render(partial: row.organizations, spacer_template: "org_spacer" ) || "Unknown" %>
  Data Source Contact Name: <%= row.source.contactname || "Unknown" %>
  Data Source Contact Email: <%= row.source.email || "Unknown" %>
  Data Source Contact Address: <%= row.source.address || "Unknown" %>, <%= row.source.city || "Unknown" %>, <%= row.source.state || "Unknown" %> <%= row.source.zipcode || "Unknown" %>
  Data Source Web Address: <%= row.source.sourcelink || "Unknown" %>
  Data Source Description: <%= row.source.sourcedescription || "Unknown" %>
  Site Citation: <%= row.source.citation || "Unknown" %>
  Metadata:
    Topic Category: <%= row.source.metadata.topiccategory || "Unknown" %>
    Title: <%= row.source.metadata.title || "Unknown" %>
    Abstract: <%= row.source.metadata.abstract || "Unknown" %>
    Profile Version: <%= row.source.metadata.profileversion || "Unknown" %>
    Metadatalink: <%= row.source.metadata.metadatalink || "Unknown" %>

<% end %>
